{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["DOM", "ES2020"],
        "module": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "useDefineForClassFields": true,
        "paths": {
            "@components/*": ["./src/components/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@stores/*": ["./src/stores/*"],
            "@api/*": ["./src/api/*"]
        }
    },
    "include": ["src"]
}
